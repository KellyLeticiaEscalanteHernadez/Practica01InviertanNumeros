<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica01InviertanNumeros.Invertir"
             Title="Invertir">
    <VerticalStackLayout  Padding="30,0" Spacing="25">
        <Image
          Source="inverso.png"
          HeightRequest="185"
          Aspect="AspectFit"
          SemanticProperties.Description="dot net bot in a race car number eight" />
        <Label 
            Text="Ingresar 4 nÃºmeros"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="Num1" Placeholder="Numero1" Keyboard="Numeric"/>
        <Entry x:Name="Num2" Placeholder="Numero2" Keyboard="Numeric"/>
        <Entry x:Name="Num3" Placeholder="Numero3" Keyboard="Numeric"/>
        <Entry x:Name="Num4" Placeholder="Numero4" Keyboard="Numeric"/>
        <Entry x:Name="Resultado" Placeholder="Resulatado" Keyboard="Numeric"/>
        <Button  Text="Invertir" Clicked="Resultado_Clicked"/>
    </VerticalStackLayout>
</ContentPage>